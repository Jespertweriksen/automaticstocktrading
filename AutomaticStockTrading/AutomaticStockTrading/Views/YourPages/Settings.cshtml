@using AutomaticStockTrading.Services;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Din Side";
}

<body>

<main class="content">
<!-- NOTICE: You can use the _analytics.html partial to include production code specific code & trackers -->

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center py-4">
    <div>
        <button class="btn btn-secondary text-dark me-2 dropdown-toggle" aria-expanded="false">
            <span class="fas fa-minus me-2"></span>Slet Bruger *
        </button>
    </div>
        
    <div>
        <button class="btn btn-dark dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="fas fa-clipboard me-2"></span>
            Mine sider
            <span class="icon icon-small ms-1"><span class="fas fa-chevron-down"></span></span>
        </button>
        <div class="dropdown-menu dashboard-dropdown dropdown-menu-start mt-2 py-0">
            <a class="dropdown-item fw-normal rounded-top" href="#"><span class="fas fa-chart-pie"></span>Portfolio</a>
            <a class="dropdown-item fw-normal" href="#"><span class="fas fa-cart-arrow-down"></span>Ordre</a>
            <div role="separator" class="dropdown-divider my-0"></div>
            <a class="dropdown-item fw-normal" href="#"><span class="fas fa-rocket "></span>Indstillinger</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 col-xl-8">
        <div class="card card-body shadow-sm mb-4">
            <h2 class="h5 mb-4">Om dig</h2>
            <form>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div>
                            <label for="first_name">Fornavn</label>
                            <input class="form-control" id="first_name" type="text" placeholder="Indtast dit fornavn" required>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div>
                            <label for="last_name">Efternavn</label>
                            <input class="form-control" id="last_name" type="text" placeholder="Også dit efternavn" required>
                        </div>
                    </div>
                </div>
                <div class="row align-items-center">
                    <div class="col-md-6 mb-3">
                        <label for="birthday">Fødselsdato</label>
                        <div class="input-group">
                            <span class="input-group-text"><span class="far fa-calendar-alt"></span></span>
                            <input data-datepicker="" class="form-control" id="birthday" type="text" placeholder="dd/mm/yyyy" required>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="gender">Køn</label>
                        <select class="form-select mb-0" id="gender" aria-label="Gender select example">
                            <option selected>Vælg venligst</option>
                            <option value="1">Kvinde</option>
                            <option value="2">Mand</option>
                            <option value="3">Apache Helicopter</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input class="form-control" id="email" type="email" placeholder="navn@firma.dk" required>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label for="phone">Telefon</label>
                            <input class="form-control" id="phone" type="number" placeholder="+45 12345678" required>
                        </div>
                    </div>
                </div>
                <h2 class="h5 my-4">Lokation</h2>
                <div class="row">
                    <div class="col-sm-9 mb-3">
                        <div class="form-group">
                            <label for="address">Adresse</label>
                            <input class="form-control" id="address" type="text" placeholder="Indtast din hjemmeadresse" required>
                        </div>
                    </div>
                    <div class="col-sm-3 mb-3">
                        <div class="form-group">
                            <label for="number">Vejnummer</label>
                            <input class="form-control" id="number" type="number" placeholder="Vejnummer" required>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4 mb-3">
                        <div class="form-group">
                            <label for="city">By</label>
                            <input class="form-control" id="city" type="text" placeholder="By" required>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            <label for="zip">Zip</label>
                            <input class="form-control" id="zip" type="tel" placeholder="Zip" required>
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-dark">Gem*</button>
                </div>
            </form>
        </div>
        
        <div class="card card-body shadow-sm mb-4 mb-lg-0">
            <h2 class="h5 mb-4">Notifikationer</h2>
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex align-items-center justify-content-between px-0 border-bottom">
                    <div>
                        <h3 class="h6 mb-1">Firmanyheder</h3>
                        <p class="small pe-4">Få sindsyge nyheder omkring de bedste aktier!</p>
                    </div>
                    <div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="user-notification-1">
                            <label class="form-check-label" for="user-notification-1"></label>
                        </div>
                    </div>
                </li>
                <li class="list-group-item d-flex align-items-center justify-content-between px-0 border-bottom">
                    <div>
                        <h3 class="h6 mb-1">Account Aktivitet</h3>
                        <p class="small pe-4">Få vigtige notifikationer, hvis der er aktivitet du har misset!</p>
                    </div>
                    <div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="user-notification-2" checked>
                            <label class="form-check-label" for="user-notification-2"></label>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    
    <div class="col-12 col-xl-4">
        <div class="row">
            <div class="col-12 mb-4">
                <div class="card shadow-sm text-center p-0">
                    <div class="profile-cover rounded-top" data-background="../assets/img/profile-cover.jpg"></div>
                    <div class="card-body pb-5">
                        <img src="../assets/img/team/profile-picture-1.jpg" class="user-avatar large-avatar rounded-circle mx-auto mt-n7 mb-4" alt="Neil Portrait">
                        <h4 class="h3">Test Testesen</h4>
                        <h5 class="fw-normal">GME Stockbroker</h5>
                        <p class="text-gray mb-4">Grapevine, Texas</p>
                        <a class="btn btn-sm btn-dark me-2" href="#">
                            <span class="fas fa-user-plus me-1"></span> Connect*
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="card card-body shadow-sm mb-4">
                    <h2 class="h5 mb-4">Select profile photo</h2>
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <!-- Avatar -->
                            <div class="user-avatar xl-avatar">
                                <img class="rounded" src="../assets/img/team/profile-picture-3.jpg" alt="change avatar">
                            </div>
                        </div>
                        <div class="file-field">
                            <div class="d-flex justify-content-xl-center ms-xl-3">
                                <div class="d-flex">
                                    <span class="icon icon-md">
                                        <span class="fas fa-paperclip me-3"></span>
                                    </span> 
                                    <input type="file">
                                    <div class="d-md-block text-left">
                                        <div class="fw-normal text-dark mb-1">Vælg billede</div>
                                        <div class="text-gray small">JPG, GIF eller PNG. Max størrelse er 800K</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    
    <!-- footerstuff -->
    <br>
    <br>
    <span>
        * , under udvikling
    </span>
</div>
</main>

</body>

