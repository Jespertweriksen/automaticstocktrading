                    </div>
                    <div class="card-body p-2">
                        <div class="ct-chart-sales-value ct-double-octave ct-series-g"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 mb-4">
                <div class="card border-light shadow-sm">
                    <div class="card-body pb-0">
                        <div class="table-responsive">
                            <table class="table table-centered table-nowrap mb-0 rounded">
                                <thead class="thead-light">
                                <tr>
                                    <th class="border-0">Navn</th>
                                    <th class="border-0">Pris</th>
                                    <th class="border-0">Valuta</th>
                                    <th class="border-0">Afkast 1 dag</th>
                                    <th class="border-0">Afkast 1 måned</th>
                                    <th class="border-0">Afkast 1 år</th>
                                </tr>
                                </thead>

                                @{
                                    string[] stockList = {"GME", "AAPL", "AMZN", "BAVA"};
                                    foreach (var stock in stockList)
                                    {
                                        var thisStock = Tools.GetStock(stock);
                                        var thisCurr = thisStock.First().close;
                                        
                                        Console.WriteLine(thisCurr);
                                        Console.WriteLine(stock);
                                        var stockOneD = thisStock[2].close;
                                        var stockOneM = thisStock[32].close;
                                        var stockOneY = thisStock[366].close;

                                        var stockAfkastOneD = Math.Round(thisCurr / stockOneD * 100 - 100, 2);
                                        var stockAfkastOneM = Math.Round(thisCurr / stockOneM * 100 - 100, 2);
                                        var stockAfkastOneY = Math.Round(thisCurr / stockOneY * 100 - 100, 2);

                                        //Afkast: værdi-idag divideret værdi-1år ganget 100 minus 100
                                        <tbody>
                                        <tr>
                                            <td>
                                                <a href="#" class="text-primary fw-bold">@stock</a>
                                            </td>
                                            <td class="fw-bold">
                                                @thisStock.First().close
                                            </td>
                                            <td>
                                                USD
                                            </td>
                                            <td>
                                                @{
                                                    if (stockAfkastOneD > 0)
                                                    {
                                                        <span class="text-success">
                                                            <span class="fas fa-angle-up"></span>
                                                            @stockAfkastOneD
                                                            <span class="fw-bold">%</span>
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-danger">
                                                            <span class="fas fa-angle-down"></span>
                                                            @stockAfkastOneD
                                                            <span class="fw-bold">%</span>
                                                        </span>
                                                    }
                                                }
                                            </td>
                                            <td>
                                                @{
                                                    if (stockAfkastOneM > 0)
                                                    {
                                                        <span class="text-success">
                                                            <span class="fas fa-angle-up"></span>
                                                            @stockAfkastOneM
                                                            <span class="fw-bold">%</span>
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-danger">
                                                            <span class="fas fa-angle-down"></span>
                                                            @stockAfkastOneM
                                                            <span class="fw-bold">%</span>
                                                        </span>
                                                    }
                                                }
                                            </td>
                                            <td>
                                                @{
                                                    if (stockAfkastOneY > 0)
                                                    {
                                                        <span class="text-success">
                                                            <span class="fas fa-angle-up"></span>
                                                            @stockAfkastOneY
                                                            <span class="fw-bold">%</span>
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-danger">
                                                            <span class="fas fa-angle-down"></span>
                                                            @stockAfkastOneY
                                                            <span class="fw-bold">%</span>
                                                        </span>
                                                    }
                                                }
                                            </td>
                                        </tr>
                                        </tbody>
                                    }
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </main>

        </body>
    }

